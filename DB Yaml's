AWSTemplateFormatVersion: "2010-09-09"
Description: RDS MySQL instance like screenshot (awsconnectmetrics)

Parameters:
  VpcId:
    Type: AWS::EC2::VPC::Id
    Description: VPC for the RDS instance

  DbSubnetIds:
    Type: List<AWS::EC2::Subnet::Id>
    Description: At least 2 subnets in different AZs (typically private subnets)

  AllowedMysqlCidr:
    Type: String
    Default: "10.0.0.0/16"
    Description: CIDR allowed to connect to MySQL (3306). Change to your network.

  MasterUsername:
    Type: String
    Default: admin
    AllowedPattern: "^[a-zA-Z][a-zA-Z0-9_]*$"
    MinLength: 1
    MaxLength: 16

  MasterUserPassword:
    Type: String
    NoEcho: true
    MinLength: 8
    MaxLength: 41

Resources:
  DbSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Allow MySQL access to RDS
      VpcId: !Ref VpcId
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 3306
          ToPort: 3306
          CidrIp: !Ref AllowedMysqlCidr

  DbSubnetGroup:
    Type: AWS::RDS::DBSubnetGroup
    Properties:
      DBSubnetGroupDescription: Subnet group for RDS
      SubnetIds: !Ref DbSubnetIds

  RdsEnhancedMonitoringRole:
    Type: AWS::IAM::Role
    Properties:
      RoleName: !Sub "rds-monitoring-role-${AWS::StackName}"
      AssumeRolePolicyDocument:
        Version: "2012-10-17"
        Statement:
          - Effect: Allow
            Principal:
              Service: monitoring.rds.amazonaws.com
            Action: sts:AssumeRole
      ManagedPolicyArns:
        - arn:aws:iam::aws:policy/service-role/AmazonRDSEnhancedMonitoringRole

  # Using a custom parameter group so slow query logging is actually enabled,
  # while still exporting slowquery to CloudWatch.
  DbParameterGroup:
    Type: AWS::RDS::DBParameterGroup
    Properties:
      Description: MySQL 8.0 parameter group (enable slow query log)
      Family: mysql8.0
      Parameters:
        slow_query_log: "1"
        long_query_time: "1"
        log_output: "FILE"

  AwsConnectMetricsDb:
    Type: AWS::RDS::DBInstance
    Properties:
      DBInstanceIdentifier: awsconnectmetrics

      Engine: mysql
      EngineVersion: "8.0.43"
      DBInstanceClass: db.m7g.large

      MasterUsername: !Ref MasterUsername
      MasterUserPassword: !Ref MasterUserPassword

      DBSubnetGroupName: !Ref DbSubnetGroup
      VPCSecurityGroups:
        - !GetAtt DbSecurityGroup.GroupId

      # Storage (gp3) to match screenshot
      StorageType: gp3
      AllocatedStorage: 200
      Iops: 3000
      StorageThroughput: 125
      MaxAllocatedStorage: 1000

      # Encryption (uses AWS managed key aws/rds by default)
      StorageEncrypted: true

      # Availability
      MultiAZ: false

      # Monitoring
      MonitoringInterval: 60
      MonitoringRoleArn: !GetAtt RdsEnhancedMonitoringRole.Arn

      # Performance Insights
      EnablePerformanceInsights: true
      PerformanceInsightsRetentionPeriod: 7

      # Logs -> CloudWatch
      EnableCloudwatchLogsExports:
        - slowquery

      # Parameter group (enables slow query logging)
      DBParameterGroupName: !Ref DbParameterGroup

      # Matches screenshot
      DeletionProtection: false
      PubliclyAccessible: false

Outputs:
  DbEndpointAddress:
    Description: RDS endpoint address
    Value: !GetAtt AwsConnectMetricsDb.Endpoint.Address

  DbEndpointPort:
    Description: RDS endpoint port
    Value: !GetAtt AwsConnectMetricsDb.Endpoint.Port

  DbSecurityGroupId:
    Description: Security Group attached to RDS
    Value: !GetAtt DbSecurityGroup.GroupId



